{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["./test/**/**/*.test.ts"]
}